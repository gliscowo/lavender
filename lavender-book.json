{
    "$schema":     "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "book":   {
            "type":       "object",
            "properties": {
                "texture":                            {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "extend":                             {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "dynamic_book_model":                 {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "dynamic_book_name":                  {
                    "$ref": "lavender-common.json#/definitions/text"
                },
                "open_sound":                         {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "flipping_sound":                     {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "intro_entry":                        {
                    "$ref": "lavender-common.json#/definitions/identifier"
                },
                "display_completion":                 {
